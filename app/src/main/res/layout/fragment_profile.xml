<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:context=".Fragment.ProfileFragment">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Имя"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profile_name"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profile_name_view"
                    app:layout_constraintTop_toBottomOf="@+id/profile_name" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Фамилия"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profile_surname"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_name"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profile_surname_view"
                    app:layout_constraintTop_toBottomOf="@+id/profile_surname" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Телефон"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profile_number_phone"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/profile_edit_surname"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profile_number_phone_view"
                    app:layout_constraintTop_toBottomOf="@+id/profile_number_phone"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profile_email"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_number_phone"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profile_email_view"
                    app:layout_constraintTop_toBottomOf="@+id/profile_email" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:textSize="20sp" android:textColor="@android:color/black"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <Button
                    android:text="Редактировать"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content" android:id="@+id/profile_button_edit"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:background="@color/button_sign_on" android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_email"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/profile_edit_name" android:textSize="20sp" android:textColor="@android:color/black"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/profile_name" android:visibility="invisible"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Surname"
                    android:ems="10"
                    android:id="@+id/profile_edit_surname" android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@+id/profile_surname"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/profile_edit_number_phone" android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/profile_number_phone" android:visibility="invisible"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/profile_edit_email"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_email"
                    app:layout_constraintHorizontal_bias="0.0" android:textColor="@android:color/black"
                    android:textSize="20sp" android:visibility="invisible"/>
            <Button
                    android:text="Сохранить"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content" android:id="@+id/profile_button_save"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:background="@color/button_sign_on"
                    app:layout_constraintHorizontal_bias="0.504" android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_email" android:layout_marginTop="40dp"/>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</layout>